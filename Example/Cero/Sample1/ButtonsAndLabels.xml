<?xml version="1.0"?>

<UIView>
    <Constraint on="width,height,top,left" with=":superview"/>

    <UILabel text="First label" id="firstLabel">
        <Constraint on="top" with=":superview" constant="40"/>
        <Constraint on="width" with=":superview" constant="-40"/>
        <Constraint on="centerx" with=":superview"/>
    </UILabel>

    <UIButton type="UIButtonTypeInfoDark" layer.cornerRadius="6" backgroundColor="#00f000">
        <titleForState state="UIControlStateNormal" value="Czesc"/>
        <Constraint on="width,height,left" with="#firstLabel"/>
        <Constraint on="top" with="#firstLabel.bottom"/>
    </UIButton>

    <UILabel text="Kot"
             backgroundColor="yellowColor"
             width="30"
             top="100"
             left="50"
             height="50"
            />

    <UIProgressView
            left="20"
            top="20"
            progress="0.3"
            tintColor="#00ff00"
            width="240"
            height="50"
            backgroundColor="redColor"
            />
</UIView>